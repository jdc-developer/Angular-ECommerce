{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
     ],
      "shared/*": [
        "app/shared/"
      ]
    },
    "lib": [
      "es2017",
      "dom"
    ],
  },
  "include": [
    "src/**/*",
    "node_modules/angular-4-data-table//src/index.ts"
    ]
}
